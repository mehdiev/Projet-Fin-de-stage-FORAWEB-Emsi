@using Microsoft.AspNetCore.Http
@{
    Layout = null;
    var isLoggedIn = Context.Session.GetString("IsAuthenticated") == "true";
    var userName = Context.Session.GetString("UserName");
    var userRole = Context.Session.GetString("UserRole");
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FORAWEB </title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        :root {
            --venetian-red: #C80815;
            --blanc-casse: #F8F4EC;
            --dark-gray: #222;
            --text-gray: #666;
        }

        body {
            font-family: 'Segoe UI', sans-serif;
            background-color: var(--blanc-casse);
            color: var(--dark-gray);
        }

        .navbar-custom {
            background-color: var(--venetian-red);
            padding-top: 0.8rem;
            padding-bottom: 0.8rem;
            border-bottom: 2px solid #a20512;
        }

        .navbar-brand {
            font-size: 1.7rem;
            font-weight: 700;
            color: #fff !important;
            letter-spacing: 1px;
        }

        .navbar-nav .nav-link {
            color: #fff !important;
            font-weight: 500;
            font-size: 1.05rem;
            transition: all 0.2s ease;
            position: relative;
        }

            .navbar-nav .nav-link:hover {
                background-color: rgba(255, 255, 255, 0.2);
            }

            .navbar-nav .nav-link.active {
                font-weight: 600;
                background-color: rgba(255, 255, 255, 0.2);
            }

                .navbar-nav .nav-link.active::after {
                    content: "";
                    position: absolute;
                    bottom: -6px;
                    left: 0;
                    width: 100%;
                    height: 2px;
                    background-color: #ffffff;
                    border-radius: 1px;
                }

        .user-info {
            font-weight: 500;
            color: #fff;
            font-size: 1.05rem;
        }

        main.container {
            padding-top: 2rem;
            padding-bottom: 2rem;
        }

        footer.footer {
            background-color: #fff;
            color: var(--text-gray);
            font-size: 0.9rem;
            padding: 1rem 0;
            border-top: 1px solid #ddd;
        }

        footer a {
            color: var(--venetian-red);
            text-decoration: none;
        }

            footer a:hover {
                text-decoration: underline;
            }

        media (max-width: 768px) {
            .navbar-nav .nav-link

        {
            padding: 0.5rem 1rem;
        }

        }
    </style>
</head>
<body class="d-flex flex-column min-vh-100">

    <!-- NAVBAR -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-custom shadow-sm">
            <div class="container-fluid px-5 d-flex justify-content-between align-items-center">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">FORAWEB</a>

                @if (isLoggedIn)
                {
                    <ul class="navbar-nav flex-row gap-4">
                        <li class="nav-item">
                            <a class="nav-link @(currentController == "Home" ? "active" : "")" asp-controller="Home" asp-action="Index">Accueil</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(currentController == "Articles" ? "active" : "")" asp-controller="Articles" asp-action="Index">Articles</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(currentController == "Clients" ? "active" : "")" asp-controller="Clients" asp-action="Index">Clients</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(currentController == "Documents" ? "active" : "")" asp-controller="Documents" asp-action="Index">Documents</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(currentController == "RechercheClient" ? "active" : "")" asp-controller="RechercheClient" asp-action="Index">Recherche Clients</a>
                        </li>

                        @if (userRole == "Admin")
                        {
                            <li class="nav-item">
                                <a class="nav-link @(currentController == "AdminPanel" ? "active" : "")" asp-controller="AdminPanel" asp-action="Index">Admin</a>
                            </li>
                        }
                    </ul>
                }

                @if (isLoggedIn)
                {
                    <ul class="navbar-nav d-flex align-items-center gap-3">
                        <li class="nav-item d-flex align-items-center user-info">
                            <i class="bi bi-person-fill me-1"></i>@userName
                        </li>
                        <li class="nav-item">
                            <a href="@Url.Action("Logout", "Account")"
                               class="nav-link text-warning fw-semibold"
                               onclick="return confirm('⚠️ Êtes-vous sûr de vouloir vous déconnecter ?');">
                                Se déconnecter
                            </a>
                        </li>
                    </ul>
                }
            </div>
        </nav>
    </header>

    <!-- MAIN -->
    <main class="flex-grow-1 container">
        @RenderBody()
    </main>

    <!-- FOOTER -->
    <footer class="footer text-center mt-auto">
        <div class="container">
            &copy; @DateTime.Now.Year - <strong>FORAWEB</strong> —
            <a asp-controller="Home" asp-action="Privacy">Politique de confidentialité</a>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>