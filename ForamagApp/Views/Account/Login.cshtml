@{
    ViewBag.Title = "Connexion";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background: linear-gradient(to right, #fefefe, #f9dede);
        animation: fadeInBody 0.5s ease-in-out;
    }

    keyframes fadeInBody {
        from

    {
        opacity: 0;
    }

    to {
        opacity: 1;
    }

    }

    .login-card {
        animation: fadeUp 0.6s ease;
        border-radius: 12px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        min-height: 550px;
    }

        .login-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 20px rgba(0,0,0,0.15);
        }

    .login-img {
        max-height: 110px;
        margin: 0 auto 25px;
        display: block;
    }

    .form-control {
        transition: border-color 0.3s ease, box-shadow 0.3s ease;
    }

        .form-control:focus {
            box-shadow: 0 0 5px #db0f2a60;
            border-color: #db0f2a;
        }

    .btn-danger {
        transition: background-color 0.3s ease, transform 0.3s ease;
        font-weight: 500;
    }

        .btn-danger:hover {
            background-color: #b30d25 !important;
            transform: scale(1.02);
        }
</style>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm login-card">
                <div class="card-body p-5">

                    <!-- Logo Image -->
                    <img src="~/images/F logo.png" alt="FORAMAG Logo" class="login-img" />

                    <h4 class="text-center mb-4 text-danger">Connexion</h4>

                    <form asp-controller="Account" asp-action="Login" method="post">
                        <div class="mb-4">
                            <label for="Username" class="form-label">Nom d'utilisateur</label>
                            <input type="text" class="form-control" id="Username" name="Username" required />
                        </div>
                        <div class="mb-4">
                            <label for="Password" class="form-label">Mot de passe</label>
                            <input type="password" class="form-control" id="Password" name="Password" required />
                        </div>
                        <button type="submit" class="btn btn-danger w-100">Se connecter</button>

                        @if (ViewBag.Error != null)
                        {
                            <div class="alert alert-danger mt-4 text-center">
                                @ViewBag.Error
                            </div>
                        }
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>